{
    "compilerOptions": {
        "target": "es5",
        "strict": true,
        "declaration": true,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "module": "commonjs",
        "sourceMap": true,
        "listEmittedFiles": true,
        "alwaysStrict": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "outDir": "./esm2015",
        "declarationDir": "./esm2015/",
        "typeRoots": ["./node_modules/@types"]

    },
    "include": [
        "lib"
    ],
    "exclude": [
        "node_modules",
        "exemple",
        "esm2015"
    ]
}